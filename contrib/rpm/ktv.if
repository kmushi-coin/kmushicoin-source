
## <summary>policy for ktv</summary>


########################################
## <summary>
##	Transition to ktv.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`ktv_domtrans',`
	gen_require(`
		type ktv_t, ktv_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, ktv_exec_t, ktv_t)
')


########################################
## <summary>
##	Execute ktv server in the ktv domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ktv_initrc_domtrans',`
	gen_require(`
		type ktv_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, ktv_initrc_exec_t)
')


########################################
## <summary>
##	Search ktv lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ktv_search_lib',`
	gen_require(`
		type ktv_var_lib_t;
	')

	allow $1 ktv_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read ktv lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ktv_read_lib_files',`
	gen_require(`
		type ktv_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, ktv_var_lib_t, ktv_var_lib_t)
')

########################################
## <summary>
##	Manage ktv lib files.
## </summary>
## <param name="domain">
